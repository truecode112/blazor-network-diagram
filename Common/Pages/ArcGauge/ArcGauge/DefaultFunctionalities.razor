@page "/arc-gauge/default"

@using Syncfusion.Blazor
@using Syncfusion.Blazor.CircularGauge
@using ThemeHelper
@inject NavigationManager NavigationManager
@inherits SampleBaseComponent;

@*Hidden:Lines*@
<PageTitle>Blazor Arc Gauge Example | Default Functionalities | Syncfusion Demos</PageTitle>

<HeadContent>
    <meta name="description" content="This example demonstrates the Default in Blazor Arc Gauge Component. Explore here for more details." />
    <link rel="canonical" href="@canonicalURL" />
</HeadContent>
@*End:Hidden*@

<SampleDescription>
    <p>This sample shows the arc gauge's default rendering. It also shows the most popular social media platforms and the percentage of female users.</p>
</SampleDescription>
<ActionDescription>
    <p>In this example, you can see how to render a default arc gauge. The arc gauge helps in the visualization of numerical values of scales in a semi-circular manner. You can use <a target="_blank" href="https://help.syncfusion.com/cr/blazor/Syncfusion.Blazor.CircularGauge.CircularGaugeAxis.html">CircularGaugeAxes</a>, <a target="_blank" href="https://help.syncfusion.com/cr/blazor/Syncfusion.Blazor.CircularGauge.CircularGaugeRange.html">CircularGaugeRanges</a> and <a target="_blank" href="https://help.syncfusion.com/cr/blazor/Syncfusion.Blazor.CircularGauge.CircularGaugeAnnotation.html">CircularGaugeAnnotations</a> oriented properties to customize the default appearance of the arc gauge.</p>
    <p>More information on the arc gauge can be found in this <a target='_blank' href='https://blazor.syncfusion.com/documentation/circular-gauge/getting-started'>documentation section</a>.</p>
</ActionDescription>

<style>
    .titleText {
        font-family:inherit;
        font-size: 22px;
        margin-top: 7px;
    }
    .tailwind div.titleText,
    .tailwind-dark div.titleText {
        font-size: 22px;
        margin-top: 2px;
    }
    .annotation {
        font-family: inherit;
        font-size: 18px;
        font-family: inherit;
    }

    .material div.titleText, .material-dark div.titleText, .bootstrap-dark div.titleText, .bootstrap div.titleText,
    .bootstrap4 div.titleText {
        margin-top: 9px;
    }
</style>
<style type="text/css" media="screen and (max-width:550px)">
    .titleText {
        font-size: 18px;
     }
 </style>
<style type="text/css" media="screen and (max-width:420px)">
    .titleText {
        font-size: 15px;
        margin-top: 8px;
    }
    .annotation {
        font-size: 12px;
        font-family: inherit;
        margin-top: -6px;
    }
    .tailwind div.titleText,
    .tailwind-dark div.titleText {
        font-size: 15px;
        margin-top: 0px;
    }
</style>

<div class="control-section" align="center">
    <SfCircularGauge Height="500px" Title="Female (% usage) on popular social network" Theme="@Theme">
        <CircularGaugeTitleStyle Size="18px" FontFamily="inherit" FontWeight="@FontWeight"></CircularGaugeTitleStyle>
        <CircularGaugeAxes>
            <CircularGaugeAxis StartAngle="0" EndAngle="270" Minimum="0" Maximum="100" Radius="100%">
                <CircularGaugeAnnotations>
                    <CircularGaugeAnnotation Angle="@YoutubeAngle" ZIndex="1" Radius="@YouTubeRadius">
                        <ContentTemplate>
                            <div class="titleText" style="color:#c8eab7;font-family:inherit;">YouTube</div>
                        </ContentTemplate>
                    </CircularGaugeAnnotation>
                    <CircularGaugeAnnotation Angle="@InstagramAngle" ZIndex="1" Radius="@InstagramRadius">
                        <ContentTemplate>
                            <div class="titleText" style="color:#82cdbc;font-family:inherit;">Instagram</div>
                        </ContentTemplate>
                    </CircularGaugeAnnotation>
                    <CircularGaugeAnnotation Angle="@TwitterAngle" ZIndex="1" Radius="@TwitterRadius">
                        <ContentTemplate>
                            <div class="titleText" style="color:#43b6c4;font-family:inherit;">Twitter</div>
                        </ContentTemplate>
                    </CircularGaugeAnnotation>
                    <CircularGaugeAnnotation Angle="@FacebookAngle" ZIndex="1" Radius="@FacebookRadius">
                        <ContentTemplate>
                            <div class="titleText" style="color:#1d91bf;font-family:inherit;">Facebook</div>
                        </ContentTemplate>
                    </CircularGaugeAnnotation>
                    <CircularGaugeAnnotation Angle="@TiktokAngle" ZIndex="1" Radius="@TiktokRadius">
                        <ContentTemplate>
                            <div class="titleText" style="color:#205ea8;font-family:inherit;">TikTok</div>
                        </ContentTemplate>
                    </CircularGaugeAnnotation>
                    <CircularGaugeAnnotation Angle="197" ZIndex="1" Radius="87%">
                        <ContentTemplate>
                            <div class="annotation">68%</div>
                        </ContentTemplate>
                    </CircularGaugeAnnotation>
                    <CircularGaugeAnnotation Angle="125" ZIndex="1" Radius="66%">
                        <ContentTemplate>
                            <div class="annotation">43%</div>
                        </ContentTemplate>
                    </CircularGaugeAnnotation>
                    <CircularGaugeAnnotation Angle="60" ZIndex="1" Radius="57%">
                        <ContentTemplate>
                            <div class="annotation">21%</div>
                        </ContentTemplate>
                    </CircularGaugeAnnotation>
                    <CircularGaugeAnnotation Angle="224" ZIndex="1" Radius="48%">
                        <ContentTemplate>
                            <div class="annotation">75%</div>
                        </ContentTemplate>
                    </CircularGaugeAnnotation>
                    <CircularGaugeAnnotation Angle="139" ZIndex="1" Radius="@TikTokValueRadius">
                        <ContentTemplate>
                            <div class="annotation">44%</div>
                        </ContentTemplate>
                    </CircularGaugeAnnotation>
                </CircularGaugeAnnotations>
                <CircularGaugeAxisLineStyle Width="0"></CircularGaugeAxisLineStyle>
                <CircularGaugeAxisLabelStyle Position="Position.Inside">
                    <CircularGaugeAxisLabelFont Size="0px">
                    </CircularGaugeAxisLabelFont>
                </CircularGaugeAxisLabelStyle>
                <CircularGaugeAxisMajorTicks Height="0" Width="0">
                </CircularGaugeAxisMajorTicks>
                <CircularGaugeAxisMinorTicks Height="0" Width="0">
                </CircularGaugeAxisMinorTicks>
                <CircularGaugeRanges>
                    <CircularGaugeRange Start="0" End="68" Color="#c8eab7" Radius="94%" StartWidth="22" EndWidth="22" />
                    <CircularGaugeRange Start="74" End="100" Color="#7a7f82" Radius="89%" StartWidth="1" EndWidth="1" />
                    <CircularGaugeRange Start="0" End="43" Color="#82cdbc" Radius="80%" StartWidth="22" EndWidth="22" />
                    <CircularGaugeRange Start="49" End="100" Color="#7a7f82" Radius="75%" StartWidth="1" EndWidth="1" />
                    <CircularGaugeRange Start="0" End="21" Color="#43b6c4" Radius="66%" StartWidth="22" EndWidth="22" />
                    <CircularGaugeRange Start="28" End="100" Color="#7a7f82" Radius="61%" StartWidth="1" EndWidth="1" />
                    <CircularGaugeRange Start="0" End="75" Color="#1d91bf" Radius="52%" StartWidth="22" EndWidth="22" />
                    <CircularGaugeRange Start="84" End="100" Color="#7a7f82" Radius="47%" StartWidth="1" EndWidth="1" />
                    <CircularGaugeRange Start="0" End="44" Color="#205ea8" Radius="38%" StartWidth="22" EndWidth="22" />
                    <CircularGaugeRange Start="55" End="100" Color="#7a7f82" Radius="34%" StartWidth="1" EndWidth="1" />
                </CircularGaugeRanges>
                <CircularGaugePointers>
                    <CircularGaugePointer Radius="0%">
                        <CircularGaugeCap Radius="0">
                            <CircularGaugeCapBorder Width="0"></CircularGaugeCapBorder>
                        </CircularGaugeCap>
                    </CircularGaugePointer>
                </CircularGaugePointers>
            </CircularGaugeAxis>
        </CircularGaugeAxes>
    </SfCircularGauge>
</div>

@code {

    //Hidden:Lines
    private string canonicalURL { get; set; }
    //End:Hidden

    public Theme Theme { get; set; }
    public string FontWeight = "500";
    public double YoutubeAngle = 338;
    public string YouTubeRadius = "105%";
    public double InstagramAngle = 331;
    public string InstagramRadius = "95%";
    public double TwitterAngle = 334;
    public string TwitterRadius = "76%";
    public double FacebookAngle = 321;
    public string FacebookRadius = "72%";
    public double TiktokAngle = 323;
    public string TiktokRadius = "52%";
    public string TikTokValueRadius = "24%";

    protected override void OnInitialized()
    {
        //Hidden:Lines
        canonicalURL = NavigationManager.Uri.Split("?")[0];
        //End:Hidden
        Theme = ThemeHelper.GetCurrentTheme(NavigationManager.Uri);
        if (Theme == Theme.Tailwind || Theme == Theme.TailwindDark)
        {
            YoutubeAngle = 336;
            InstagramAngle = 329;
            TwitterAngle = 332;
            FacebookAngle = 317;
            TiktokAngle = 318;
            InstagramRadius = "95%";
            TikTokValueRadius = "25%";
            TiktokRadius = "50%";
            FontWeight = "500";
        }
        else if (Theme == Theme.Bootstrap5 || Theme == Theme.Bootstrap5Dark) {
            FontWeight = "500";
        }
        else if (Theme == Theme.Fluent ||Theme == Theme.FluentDark) {
            FontWeight = "600";
        }
        else {
            FontWeight = "normal";
        }
    }
}
