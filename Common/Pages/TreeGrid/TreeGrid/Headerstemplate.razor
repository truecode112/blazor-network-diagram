@page "/tree-grid/header-template"

@using Syncfusion.Blazor.TreeGrid
@using Syncfusion.Blazor.Grids
@*Hidden:Lines*@
@inject Microsoft.AspNetCore.Components.NavigationManager UriHelper
@using ej2_blazor_wrapdata
@inherits SampleBaseComponent;
<PageTitle>Blazor Tree Grid Header Template Example - Syncfusion Demos</PageTitle>
<HeadContent>
    <meta name="description" content="This example demonstrates the Header Template in Blazor Tree Grid Component. Explore here for more details." />
    <link rel="canonical" href="@canonicalURL" />
</HeadContent>
@*End:Hidden*@

<SampleDescription>
    <p>This sample demonstrates Tree Grid header template feature. In this sample, custom icons have been shown in the column headers.</p>
</SampleDescription>
<ActionDescription>
    <p>By using the <a target='_blank' href='https://help.syncfusion.com/cr/blazor/Syncfusion.Blazor.TreeGrid.TreeGridColumn.html#Syncfusion_Blazor_TreeGrid_TreeGridColumn_HeaderTemplate'>HeaderTemplate</a> component of <a target='_blank' href='https://help.syncfusion.com/cr/blazor/Syncfusion.Blazor.TreeGrid.TreeGridColumn.html'>TreeGridColumn</a>, cusom content can be placed. In this demo, customized template is rendered for all column headers.</p>
    <p>More information on the header template can be found in this <a target='_blank' href='https://blazor.syncfusion.com/documentation/treegrid/columns/#header-template'>documentation section</a>.</p>
</ActionDescription>

<div class="col-lg-12 control-section">
    <div class="content-wrapper">
        <div class="row">
            <SfTreeGrid DataSource="@TreeData" IdMapping="TaskId" ParentIdMapping="ParentId" TreeColumnIndex="0" Height="312">
                <TreeGridColumns>
                    <TreeGridColumn Field="TaskName" HeaderText="Task Name" Width="240">
                        <HeaderTemplate>
                            @{
                                <div class="image">
                                    <img src="@UriHelper.ToAbsoluteUri($"{SampleService.WebAssetsPath}images/tree-grid/task-name.png")" width="20" height="20" class="taskName" style="margin-right: 8px; padding-bottom: 1px" />Task Name
                                </div>
                            }
                        </HeaderTemplate>
                    </TreeGridColumn>
                    <TreeGridColumn Field="StartDate" HeaderText="Start Date" Width="120" Type=ColumnType.Date Format="d" TextAlign="TextAlign.Right">
                        <HeaderTemplate>
                            <div class="image">
                                <img src="@UriHelper.ToAbsoluteUri($"{SampleService.WebAssetsPath}images/tree-grid/start-name.png")" width="20" height="20" class="startDate" style="margin-right: 8px; padding-bottom: 1px" />Start Date
                            </div>
                        </HeaderTemplate>
                    </TreeGridColumn>
                    <TreeGridColumn Field="Resources" HeaderText="Resources" Width="110" TextAlign="TextAlign.Right">
                        <HeaderTemplate>
                            @{
                                <div class="image">
                                    <img src="@UriHelper.ToAbsoluteUri($"{SampleService.WebAssetsPath}images/tree-grid/resources.png")" width="20" height="20" class="resources" style="margin-right: 8px; padding-bottom: 1px" />Resources
                                </div>
                            }
                        </HeaderTemplate>
                    </TreeGridColumn>
                    <TreeGridColumn Field="Duration" HeaderText="Duration" Width="110" TextAlign="TextAlign.Right">
                        <HeaderTemplate>
                            @{
                                <div class="image">
                                    <img src="@UriHelper.ToAbsoluteUri($"{SampleService.WebAssetsPath}images/tree-grid/duration.png")" width="20" height="20" class="duration" style="margin-right: 8px; padding-bottom: 2px" />Duration
                                </div>
                            }
                        </HeaderTemplate>
                    </TreeGridColumn>
                    <TreeGridColumn Field="Progress" HeaderText="Progress" Width="110" >
                        <HeaderTemplate>
                            @{
                                <div class="image">
                                    <img src="@UriHelper.ToAbsoluteUri($"{SampleService.WebAssetsPath}images/tree-grid/progress.png")" width="20" height="20" class="Progress" style="margin-right: 8px; padding-bottom: 2px" />Progress
                                </div>
                            }
                        </HeaderTemplate>
                    </TreeGridColumn>
                </TreeGridColumns>
            </SfTreeGrid>
        </div>
    </div>
</div>

@*Hidden:Lines*@
  <style>    
    .bootstrap5-dark img.taskName, .bootstrap5 img.taskName, .bootstrap5-dark img.startDate, .bootstrap5 img.startDate,
    .bootstrap5-dark img.resources, .bootstrap5 img.resources, .bootstrap5-dark img.duration, .bootstrap5 img.duration,
    .bootstrap5-dark img.Progress, .bootstrap5 img.Progress, .tailwind img.taskName, .tailwind img.startDate, 
    .tailwind img.duration, .tailwind img.resources, .tailwind img.Progress  {
       padding-bottom: 3px !important;
    }

    .bootstrap5-dark img.taskName, .material-dark img.taskName, .fabric-dark img.taskName, .bootstrap-dark img.taskName,
    .bootstrap4-dark img.taskName, .tailwind-dark img.taskName, .highcontrast img.taskName, .fluent-dark img.taskName{
       content: url(@UriHelper.ToAbsoluteUri($"{SampleService.WebAssetsPath}images/tree-grid/task-name-dark.png"));
    }

    .bootstrap5-dark img.startDate, .material-dark img.startDate, .fabric-dark img.startDate, .bootstrap-dark img.startDate,
    .bootstrap4-dark img.startDate, .tailwind-dark img.startDate, .highcontrast img.startDate, .fluent-dark img.startDate {
       content: url(@UriHelper.ToAbsoluteUri($"{SampleService.WebAssetsPath}images/tree-grid/start-date-dark.png"));
    }

    .bootstrap5-dark img.resources, .material-dark img.resources, .fabric-dark img.resources, .bootstrap-dark img.resources,
    .bootstrap4-dark img.resources, .tailwind-dark img.resources, .highcontrast img.resources, .fluent-dark img.resources {
       content: url(@UriHelper.ToAbsoluteUri($"{SampleService.WebAssetsPath}images/tree-grid/resources-dark.png"));
    }

    .bootstrap5-dark img.duration, .material-dark img.duration, .fabric-dark img.duration, .bootstrap-dark img.duration,
    .bootstrap4-dark img.duration, .tailwind-dark img.duration, .highcontrast img.duration, .fluent-dark img.duration {
       content: url(@UriHelper.ToAbsoluteUri($"{SampleService.WebAssetsPath}images/tree-grid/duration-dark.png"));
    }

    .bootstrap5-dark img.Progress, .material-dark img.Progress, .fabric-dark img.Progress, .bootstrap-dark img.Progress,
    .bootstrap4-dark img.Progress, .tailwind-dark img.Progress, .highcontrast img.Progress, .fluent-dark img.Progress {
       content: url(@UriHelper.ToAbsoluteUri($"{SampleService.WebAssetsPath}images/tree-grid/progress-dark.png"));
    }
  </style>
@*End:Hidden*@

@code {

    private IEnumerable<WrapData> TreeData { get; set; }
    //Hidden:Lines
    private string canonicalURL { get; set; }
    //End:Hidden

    protected override void OnInitialized()
    {
        //Hidden:Lines
        canonicalURL = UriHelper.Uri.Split("?")[0];
        //End:Hidden
        this.TreeData = WrapData.GetWrapData().ToList();
    }
}
     
