        justify-content: center;
        align-items: center;
    }
    .chip-header {
        text-align: center;
        padding-top: 10px;
    }
    #chip-wrapper .anne {
        background-image: url(@(SampleService.WebAssetsPath + "images/chips/anne.png"));
    }
    #chip-wrapper .janet {
        background-image: url(@(SampleService.WebAssetsPath + "images/chips/janet.png"));
    }
    #chip-wrapper .laura {
        background-image: url(@(SampleService.WebAssetsPath + "images/chips/laura.png"));
    }
    #chip-wrapper .margaret {
        background-image: url(@(SampleService.WebAssetsPath + "images/chips/margaret.png"));
