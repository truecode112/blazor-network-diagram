@page "/barcodes/upc-e"

@using Syncfusion.Blazor.BarcodeGenerator

@inherits SampleBaseComponent;
@*Hidden:Lines*@
@inject NavigationManager NavigationManager

<PageTitle>Blazor Barcode Generator UPC-E Example - Syncfusion Demos</PageTitle>

<HeadContent>
    <meta name="description" content="This example demonstrates the UPC-E in Blazor Barcode Generator Component. Explore here for more details." />
    <link rel="canonical" href="@canonicalURL" />
</HeadContent>
@*End:Hidden*@

<SampleDescription>
    <p>This sample visualizes a barcode image that presents information with a combination of numbers, uppercase letters, and control characters such as <b>tab</b> and <b>new line</b>.</p>
</SampleDescription>
<ActionDescription>
   <p>This sample shows how to create a UPC-E barcode type with alphanumeric characters. The <code>Type</code> property can be used to set the barcode type as <code>UpcE</code>.</p>
</ActionDescription>

<div class="control-section" style="width: 100%;height: 590px;">
    <div class="center">
        <div class="centercontrol">
            <SfBarcodeGenerator Width="200px" Height="150px" Type="@BarcodeType.UpcE" Value="123456"></SfBarcodeGenerator>
        </div>
    </div>
    <div class="allowedText">
        <span style="font-weight: 600;"> Allowed input characters:</span> The UPC-E barcode supports all numeric digits(0-9) and requires 6 characters text length.
    </div>
</div>

<style>
    .centercontrol {
        margin: auto;
        width: 50%;
        padding-left: 18%;
        height: 50%;
    }

    .allowedText {
        margin-left: 14px;
        margin-right: 17px;
        margin-top: 14px;
        width: auto;
        height: auto;
    }


    .center {
        margin-left: 14px;
        margin-right: 17px;
        margin-top: 14px;
        min-width: 280px;
        width: auto;
        border: 2px solid lightgray;
        min-height: 40%;
        padding-top: 35px;
    }

    @@media screen and (max-width: 570px)
    {
        .centercontrol{
            width: 60%;
            padding-left: 0px;
        }
    }
</style>


@*Hidden:Lines*@
@code {
    private string canonicalURL { get; set; }

    protected override void OnInitialized()
    {
        canonicalURL = NavigationManager.Uri.Split("?")[0];
    }
}
@*End:Hidden*@