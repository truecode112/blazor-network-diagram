@page "/barcodes/default-functionalities"

@using Syncfusion.Blazor.BarcodeGenerator

@inherits SampleBaseComponent;
@*Hidden:Lines*@
@inject NavigationManager NavigationManager

<PageTitle>Blazor Barcode Generator EAN-8 Example - Syncfusion Demos</PageTitle>

<HeadContent>
    <meta name="description" content="This example demonstrates the EAN-8 in Blazor Barcode Generator Component. Explore here for more details." />
    <link rel="canonical" href="@canonicalURL" />
</HeadContent>
@*End:Hidden*@

<SampleDescription>
    <p>This sample visualizes 8-digit Global Trade Identification Numbers. These numbers were introduced for use on small packages where an EAN-8 barcode would be too large.</p>
</SampleDescription>
<ActionDescription>
   <p>This sample shows how to create an EAN-8 barcode. The <code>Type</code> property can be used to set the barcode type as <code>Ean8</code>. </p>
</ActionDescription>

<div class="control-section" style="width: 100%;height: 590px;">
    <div class="center">
        <div class="centercontrol">
            <SfBarcodeGenerator Width="200px" Height="150px" Type="@BarcodeType.Ean8" Value="11223344"></SfBarcodeGenerator>
        </div>
    </div>
    <div class="allowedText">
        <span style="font-weight: 600;"> Allowed input characters:</span> The EAN-8 barcode supports all numeric digits (0-9) and requires an 8 characters text length.
    </div>
</div>

<style>
    .centercontrol {
        margin: auto;
        width: 50%;
        padding-left: 18%;
        height: 50%;
    }

    .allowedText {
        margin-left: 14px;
        margin-right: 17px;
        margin-top: 14px;
        width: auto;
        height: auto;
    }


    .center {
        margin-left: 14px;
        margin-right: 17px;
        margin-top: 14px;
        min-width: 280px;
        width: auto;
        border: 2px solid lightgray;
        min-height: 40%;
        padding-top: 35px;
    }

    @@media screen and (max-width: 570px)
    {
        .centercontrol{
            width: 60%;
            padding-left: 0px;
        }
    }
</style>

@*Hidden:Lines*@
@code {
    private string canonicalURL { get; set; }

    protected override void OnInitialized()
    {
        canonicalURL = NavigationManager.Uri.Split("?")[0];
    }
}
@*End:Hidden*@